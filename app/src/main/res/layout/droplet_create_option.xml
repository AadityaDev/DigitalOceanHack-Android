<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:background="#00BCD4"
    android:padding="@dimen/dimen_4dp"
    app:cardCornerRadius="@dimen/dimen_6dp">

    <com.technawabs.oceansquare.uicomponents.animation.RippleRelativeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_12dp">

        <EditText
            android:id="@+id/droplet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:hint="Name of droplet"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Spinner
            android:id="@+id/region_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/droplet_name"
            android:layout_marginTop="@dimen/dimen_16dp" />

        <Spinner
            android:id="@+id/os_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/region_spinner"
            android:layout_marginTop="@dimen/dimen_16dp" />

        <Spinner
            android:id="@+id/size_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/os_spinner"
            android:layout_marginTop="@dimen/dimen_16dp" />

        <com.technawabs.oceansquare.uicomponents.animation.RippleRelativeView
            android:id="@+id/create_droplet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/size_spinner"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_12dp"
                android:text="@string/create"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen_18sp"
                android:textStyle="bold" />
        </com.technawabs.oceansquare.uicomponents.animation.RippleRelativeView>


    </com.technawabs.oceansquare.uicomponents.animation.RippleRelativeView>

</android.support.v7.widget.CardView>